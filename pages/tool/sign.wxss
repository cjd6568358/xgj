/* pages/sign/sign.wxss */
scroll-view {
  background: linear-gradient(#2b91fd, #f5f5f5 50%);
}

.calendar_extDataClass {
  background: #2b91fd;
  color: #fff;
  border-radius: 50%;
}

.calendar_extActiveClass {
  background-color: #2b91fd;
  color: #fff;
}

.btn-sign {
  margin: 40rpx auto;
  width: 80vw;
  border-radius: 60rpx;
  color: #fff;
  background-color: #48b7fc;
}

.btn-sign::after {
  border: none;
}

.data-log {
  margin: 20rpx auto;
  width: 90vw;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #fff;
}

.data-log .weui-slide {
  padding: 10rpx 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
