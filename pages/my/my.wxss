/* pages/my/my.wxss */

page {
  background: #f3f5f7;
}

.user-info {
  padding: 40rpx 80rpx;
  display: flex;
  background: #fff;
  margin-bottom: 10rpx;
  font-size: 32rpx;
}

.user-info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-info .other {
  margin-left: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.settings {
  background: #fff;
}

.settings .title {
  border-bottom: 2rpx solid #ddd;
  /* margin: 0 -40rpx; */
  padding: 10rpx 40rpx;
  font-size: 28rpx;
}

.settings .item {
  padding: 0 40rpx;
  display: flex;
  margin: 10rpx 0;
}

.settings .item button {
  font-size: 28rpx;
  background: #fff;
  text-align: left;
  padding-left: 0;
  padding-right: 0;
  flex: 1;
}

.settings .item button::after {
  /* border-top: none;
  border-left: none;
  border-right: none; */
  border: none;
}

.settings .item .icon-arrow {
  width: 40rpx;
  background: url('data:image/svg+xml;base64,') center / 40rpx 40rpx no-repeat;
}
