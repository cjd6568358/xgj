page {
  padding: 0;
}

page .user-info {
  color: #fff;
  height: 200rpx;
  display: flex;
  align-items: center;
  padding: 0 6vw;
  margin-bottom: 36rpx;
}

page .user-info .avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  overflow: hidden;
}

page .user-info .right {
  margin-left: 30rpx;
}

page .menu-section {
  border-radius: 12rpx;
  margin: 0 4vw;
  padding: 0 20rpx 0 60rpx;
  background-color: #fff;
}

page .menu-section .item {
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  position: relative;
}

page .menu-section .item .label text {
  margin-left: 10rpx;
}

page .menu-section .item:last-child {
  border-bottom: 0;
}

.label_icon_extClass {
  position: absolute;
  top: 33rpx;
  left: -40rpx;
}

.value_icon_extClass {
  position: absolute;
  top: 22rpx;
  right: 6rpx;
}

.half_extClass .half-desc checkbox-group {
  display: flex;
}

.half_extClass .half-desc checkbox-group .item {
  flex: 1;
  text-align: center;
}

.half_extClass .weui-half-screen-dialog__ft {
  padding-top: 20rpx;
}

.half_extClass .weui-half-screen-dialog__ft button {
  background-color: #2b91fd;
}

.key {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.key + .key {
  margin-top: 20rpx;
}
