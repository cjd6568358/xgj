.verify-form {
  margin: 32rpx;
  background-color: #fff;
  padding: 60rpx 40rpx;
  box-shadow: 0rpx 20rpx 40rpx 0px rgba(0, 0, 0, 0.04);
  border-radius: 16rpx;
}

.verify-form .title {
  font-weight: 600;
  font-size: 34rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.verify-form .btn-verify {
  margin-top: 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
  padding: 0;
  background-color: #2b91fd;
  color: #fff;
}

.verify-form .input-warp {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.verify-form .input-warp input {
  padding-left: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  flex: 1;
  border-radius: 8rpx;
}
