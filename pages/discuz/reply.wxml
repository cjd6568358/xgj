<!--pages/discuz/reply.wxml-->
<view class="page_section">
  <view class="title">标题</view>
  <view class="input_wrap">
    <input model:value="{{subject}}" placeholder="选填,请输入标题" />
  </view>
</view>
<view class="page_section">
  <view class="title">内容</view>
  <view class="input_wrap">
    <textarea show-confirm-bar="{{false}}" model:value="{{message}}" placeholder="必填,请输入最少20个字内容" />
    </view>
</view>
<button type="primary" bindtap="bindSubmit">提交</button>