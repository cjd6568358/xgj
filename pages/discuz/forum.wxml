<!--pages/discuz/forum.wxml-->
<view class="area" wx:for="{{forumList}}" wx:key="i" wx:for-index="i" wx:for-item="area" data-title="{{area.name}}">
  <block wx:for="{{area.value}}" wx:key="ii" wx:for-index="ii" wx:for-item="thread" >
    <view class="item" wx:if="{{thread.type != '投票'}}"  data-path="{{'http://'+webSite+'/bbs/'+thread.href}}" bindtap="routerToThread">
      {{thread.title}}
      <block wx:if="{{thread.permission}}">[阅读权限{{thread.permission}}]</block>
      ♥{{thread.thanks}} ({{thread.nums}})(发表日期:{{thread.date}})
    </view>
  </block>
</view>
<shortcutMenu url="{{url}}" bindreload="reload"></shortcutMenu>
<pagination wx:if="{{forumList.length}}" curr="{{pageInfo.currPageNum}}" total="{{pageInfo.totalPageNum}}" bindpageChange="pageChange"></pagination>