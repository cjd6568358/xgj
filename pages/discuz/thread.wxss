/* pages/discuz/thread.wxss */
.thread {
  background: #fff;
  padding: 20rpx;
}

.thread .post {
  line-height: 1.8;
  margin-bottom: 10rpx;
}

.thread .post .post-info {
  background: #fbfbff;
  margin: 0 -20rpx;
  padding: 10rpx 20rpx;
}

.thread .post .post-content {
  overflow: auto;
}

.thread .post .post-content img {
  max-width: 95vw;
}

.name-floor,
.level-time {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
}

.name {
  font-weight: 500;
  color: #2196f3;
}

.level-time {
  color: #666;
}
