/* pages/discuz/thread.wxss */
.thread {
  background: #f5f5f5;
  padding: 20rpx;
}

.thread .post {
  line-height: 1.8;
  margin-bottom: 20rpx;
  background: #fbfbff;
  padding: 20rpx;
}

.thread .post:last-child {
  margin-bottom: 0;
}

.thread .post .post-info {
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
  line-height: 1.3;
}

.thread .post .post-content {
  margin-top: 15rpx;
}

.name-floor .name {
  font-weight: 500;
  color: #2196f3;
}

.name-floor .level {
  margin-left: 20rpx;
  color: #666;
}

.level-time {
  display: flex;
  justify-content: space-between;
  color: #666;
}
