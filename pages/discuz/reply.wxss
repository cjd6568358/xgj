page {
  padding: 20rpx 30rpx;
}

page .page_section {
  margin-bottom: 30rpx;
}

page .page_section .title {
  margin-bottom: 20rpx;
}

page .page_section .input_wrap {
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  background-color: #fff;
}

page .page_section .input_wrap input {
  padding-left: 30rpx;
  width: 100%;
  height: 80rpx;
}

page .page_section .input_wrap textarea {
  height: 200rpx;
  padding: 20rpx 30rpx;
  width: 100%;
}

page button[type='primary'] {
  margin-top: 30rpx;
  background-color: #2b91fd;
}
