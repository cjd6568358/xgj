/* components/pagination/index.wxss */

.pagination {
  height: 120rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  padding: 20rpx 80rpx;
  border-top: 20rpx solid #f5f5f5;
}

.pagination .btn {
  flex: 1;
  height: 36rpx;
}
.pagination .btn.disabled {
  visibility: hidden;
}

.btn.prev-btn {
  transform: rotate(180deg);
}

.pagination .curr {
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
