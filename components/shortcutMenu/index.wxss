/* components/shortcutMenu/index.wxss */

.menu {
  position: fixed;
  bottom: 150rpx;
  right: 100rpx;
  z-index: 99;
}

.menu.opened .btn-menu .icon-close {
  transform: rotate(0deg);
}

.menu.opened .item .text {
  display: block;
  transition: all 0.1s;
}

.menu.opened .item:nth-of-type(1) {
  transform: rotate(10deg);
}

.menu.opened .item:nth-of-type(1) .text {
  transform: rotate(-10deg);
}

.menu.opened .item:nth-of-type(2) {
  transform: rotate(40deg);
}

.menu.opened .item:nth-of-type(2) .text {
  transform: rotate(-40deg);
}

.menu.opened .item:nth-of-type(3) {
  transform: rotate(70deg);
}

.menu.opened .item:nth-of-type(3) .text {
  transform: rotate(-70deg);
}

.menu.opened .item:nth-of-type(4) {
  transform: rotate(100deg);
}

.menu.opened .item:nth-of-type(4) .text {
  transform: rotate(-100deg);
}

.menu .btn-menu {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: -30rpx;
  bottom: -30rpx;
}

.menu .btn-menu .icon-close {
  width: 60rpx;
  height: 60rpx;
  transform: rotate(-45deg);
  transition: transform 0.2s;
}

.menu .item {
  width: 200rpx;
  height: 1rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  transform-origin: right bottom;
  transition: all 0.3s 0.1s;
}

.menu .item .text {
  display: none;
  position: absolute;
  top: -40rpx;
  left: -40rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  z-index: 1;
  text-align: center;
  border: 2rpx solid #ddd;
  transition: all 0.1s 0.3s;
  background: rgba(255, 255, 255, 0.85);
}

.reply-modal {
  padding: 60rpx 40rpx;
  width: 640rpx;
}

.reply-modal .subject {
  margin-bottom: 10rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.reply-modal .message {
  margin-bottom: 10rpx;
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.reply-modal .btn-group {
  display: flex;
  justify-content: space-between;
}

.reply-modal .btn-group .btn {
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  width: 250rpx;
}

.reply-modal .btn-group .btn.submit {
  color: #fff;
  background-color: #2196f3;
}
