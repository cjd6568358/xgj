/* components/calendar/calendar.wxss */
.calendar-wrap {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.calendar-header {
  text-align: center;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}

.calendar-header .title {
  flex: 1;
}

.calendar-header .left,
.calendar-header .right {
  flex: 1;
  background: url("data:image/svg+xml;base64,") center/40rpx 40rpx no-repeat;
}

.calendar-header .left::after,
.calendar-header .right::after {
  border: none;
}

.calendar-header .right {
  transform: rotate(180deg);
}

.calendar-body .row,
.calendar-body .row-header {
  display: grid;
  grid-template-columns: 13vw auto 13vw auto 13vw auto 13vw auto 13vw auto 13vw auto 13vw;
}

.calendar-body .cell0,
.calendar-body .cell1,
.calendar-body .cell2,
.calendar-body .cell3,
.calendar-body .cell4,
.calendar-body .cell5,
.calendar-body .cell6 {
  height: 13vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-body .row .cell0,
.calendar-body .row .cell6 {
  color: red;
}

.calendar-body .cell0 {
  grid-column: 1;
  grid-row: 1;
}

.calendar-body .cell1 {
  grid-column: 3;
  grid-row: 1;
}

.calendar-body .cell2 {
  grid-column: 5;
  grid-row: 1;
}

.calendar-body .cell3 {
  grid-column: 7;
  grid-row: 1;
}

.calendar-body .cell4 {
  grid-column: 9;
  grid-row: 1;
}

.calendar-body .cell5 {
  grid-column: 11;
  grid-row: 1;
}

.calendar-body .cell6 {
  grid-column: 13;
  grid-row: 1;
}

.calendar-body .data-class,
.calendar-body .active-class {
  background-color: #2b91fd;
  color: #fff;
  padding: 8rpx;
  background-clip: content-box;
}
